<script type="text/javascript">
    const dots = document.querySelector(".dots");
    const dropdown = document.querySelector(".dropdown__list")
    const container = document.querySelector(".container")
    $('.dots').each(function () {

        $(this).click(function () {
            if ($(this).children(".dropdown__list1").css("display") == "none") {
                $(this).children(".dropdown__list1").css("display", "block")
            } else {
                $(this).children(".dropdown__list1").css("display", "none")
            }
        });

        $(this).click(function () {
            if ($(this).children(".dropdown__list2").css("display") == "none") {
                $(this).children(".dropdown__list2").css("display", "block")
            } else {
                $(this).children(".dropdown__list2").css("display", "none")
            }
        });

    });
    dots.addEventListener("click", () => {
            if (dropdown.style.display === "block") {
                dropdown.style.display = "none"
            } else {
                dropdown.style.display = "block"
            }
        })

        container.addEventListener("click", () => {
            if (dropdown.style.display === "block") {
                dropdown.style.display = "none"
            }
        })

        function press(f) {
            if (f.keyCode == 13) {
                Select_form.submit();
            }
        }

